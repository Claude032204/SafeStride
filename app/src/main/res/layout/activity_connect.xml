<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="#000B7E">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:padding="7dp"
        android:visibility="visible">

        <!-- Back Arrow Icon -->
        <ImageView
            android:id="@+id/backArrowIcon"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/back_arrow"
            android:src="@drawable/backkk"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <!-- Title Text -->
    <TextView
        android:id="@+id/connectDeviceTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Searching for Device..."
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp" />

    <!-- Instruction Text -->
    <TextView
        android:id="@+id/deviceSetupInstructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make sure to have your Bluetooth or GPS on. And turn on your SafeStride Device."
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:paddingHorizontal="24dp" />

    <!-- Spacer to push the button to the bottom -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Button -->
    <Button
        android:id="@+id/connectDeviceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/button_border"
        android:elevation="4dp"
        android:paddingVertical="12dp"
        android:text="Get Started!"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
