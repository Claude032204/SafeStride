<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#C9F0FF"
        android:fitsSystemWindows="true">

        <!-- Header Layout -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#C9F0FF"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Menu Icon -->
            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:contentDescription="@string/menu_icon"
                android:src="@drawable/menuu" />

            <!-- SafeStride Text -->
            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SafeStride"
                android:textColor="#02143A"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_weight="1" />

            <!-- Notification Bell Icon -->
            <ImageView
                android:id="@+id/notificationBell"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:contentDescription="@string/notification_icon"
                android:src="@drawable/notif" />
        </LinearLayout>

        <!-- Scroll View -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/addDeviceCard"
                    android:layout_width="300dp"
                android:layout_height="180dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/add_device"
                android:elevation="6dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/addDeviceIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="16dp"
                        android:contentDescription="@string/add_device"
                        android:src="@drawable/pluss" />

                    <TextView
                        android:id="@+id/addDeviceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="Add Device"
                        android:textColor="@android:color/holo_blue_bright"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Features Section -->
                <LinearLayout
                    android:id="@+id/featuresLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <!-- Features Text -->
                <TextView
                    android:id="@+id/featuresText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Features"
                    android:textColor="#001E5D"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical" />

                <!-- Thin Line Beside Features Text -->
                <View
                    android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#001E5D"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                />
            </LinearLayout>


        <!-- Patient Card -->
                <LinearLayout
                    android:id="@+id/patientCard"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/p_card_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <!-- Image Icon -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/adduser"
                        android:contentDescription="@string/patient_icon"
                        android:layout_marginEnd="16dp" />

                    <!-- Title Text (Weight 1, takes remaining space) -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Person in Care"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_blue_bright"
                        android:textSize="20sp"
                        android:gravity="center_vertical" />

                    <!-- Arrow Icon (Right) -->
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/arrowright"
                        android:contentDescription="@string/right_arrow"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <!-- Records Card -->
                <LinearLayout
                    android:id="@+id/cardRecords"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/r_card_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <!-- Image Icon -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/records"
                        android:contentDescription="@string/records_icon"
                        android:layout_marginEnd="16dp" />

                    <!-- Title Text (Weight 1, takes remaining space) -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Records"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_blue_bright"
                        android:textSize="20sp"
                        android:gravity="center_vertical" />

                    <!-- Arrow Icon (Right) -->
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/arrowright"
                        android:contentDescription="@string/right_arrow"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <!-- Reminder Card -->
                <LinearLayout
                    android:id="@+id/cardReminder"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rm_card_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <!-- Image Icon -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/reminders"
                        android:contentDescription="@string/reminder_icon"
                        android:layout_marginEnd="16dp" />

                    <!-- Title Text (Weight 1, takes remaining space) -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reminder"
                        android:textColor="@android:color/holo_blue_bright"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical" />

                    <!-- Arrow Icon (Right) -->
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/arrowright"
                        android:contentDescription="@string/right_arrow"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <!-- Thin Line Below Features Section -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#001E5D"
                    android:layout_marginTop="30dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@drawable/drawer_bg"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/menu" />

</androidx.drawerlayout.widget.DrawerLayout>
