<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SafeStride" parent="Base.Theme.SafeStride">
        <!-- Define the button background for the entire app -->
        <item name="android:buttonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button</item> <!-- Reference to the white button drawable -->
        <item name="android:textColor">#000000</item>  <!-- Black text for contrast -->
    </style>


</resources>